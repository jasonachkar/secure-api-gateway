# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
# Generate RS256 keys: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY=./keys/private.pem
JWT_PUBLIC_KEY=./keys/public.pem
# For HS256 (simpler but less secure): JWT_SECRET=your-super-secret-key-min-256-bits-long
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_GLOBAL_MAX=100
RATE_LIMIT_GLOBAL_WINDOW=60000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=60000
RATE_LIMIT_USER_MAX=200
RATE_LIMIT_USER_WINDOW=60000

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
COOKIE_SECRET=your-cookie-secret-min-32-chars-long-change-in-production
BCRYPT_ROUNDS=12

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Upstream Services
UPSTREAM_REPORTS_URL=http://mock-service:4000
UPSTREAM_TIMEOUT=5000
UPSTREAM_RETRY_ATTEMPTS=2

# SSRF Protection - Allowlist for proxy endpoints
ALLOWED_UPSTREAM_HOSTS=mock-service,api.example.com

# Swagger UI (disable in production)
ENABLE_SWAGGER=true

# Request Limits
BODY_LIMIT=1048576
REQUEST_TIMEOUT=30000
